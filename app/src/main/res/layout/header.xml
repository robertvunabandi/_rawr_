<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:id="@+id/rl_layout"
    android:background="@color/SXDark"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_android"
        app:border_color="#FF000000"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_above="@+id/tv_drawer_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akash Bangad"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="8dp"
        android:id="@+id/tv_drawer_username"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/tv_email"
        android:layout_alignLeft="@+id/iv_profile_image"
        android:layout_alignStart="@+id/iv_profile_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akash.bangad93@gmail.com"
        android:id="@+id/tv_email"
        android:textStyle="italic"
        android:gravity="left"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_drawer_username"
        android:layout_alignStart="@+id/tv_drawer_username" />

</RelativeLayout>